{
  "name": "cooking-aide",
  "version": "1.0.0",
  "description": "A real-time vision application using the Overshoot SDK to read visible text from camera input",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "start": "cd server && npm start",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install"
  },
  "keywords": [
    "vision",
    "overshoot",
    "text-recognition",
    "camera",
    "cooking",
    "realtime",
    "react",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/cooking-aide.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/cooking-aide/issues"
  },
  "homepage": "https://github.com/yourusername/cooking-aide#readme"
}
